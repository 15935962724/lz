body{background-color:#eee;}
.results{width:100%;padding:0;float: left;margin-bottom: 100px;}
.resultlist{width:100%;padding:0;float: left;}
#tablecenter{width:100%;background:#ffffff;display:block;margin-top:15px;box-shadow:3px 3px 5px #ddd}
#tablecenter td{padding:5px;}
#tablecenter li{padding:10px 5px;border-bottom:1px solid #ddd;display:-webkit-box}
#tablecenter li span{display:block;    -webkit-box-flex: 1;}
#tablecenter .tr_tit  em{color:#0078C3;}
#tablecenter .td01{width:60px;color:#d80000;text-align:right;}
#tablecenter .redsize{font-weight:bold;width:30px;text-align:center;color:#FF7F26;}
.td_all em{font-style:normal;color:#FF7F26;font-weight:bold;}
 #tablecenter li.td_but{display:block;text-align:right;}
 
.td_but input{padding:8px 12px;border:1px #7F9DB9 solid;border-radius:5px;background:#fff;margin:0px 3px;cursor:pointer;}
#dialog{top:45px !Important;}

.write{text-align:center;padding:20px 20px 10px;font-size:17px}
.write textarea{border-radius:3px;vertical-align:top;min-height:80px;width:100%;margin-top:5px}
.subt{text-align:center;padding-top:10px}
.subt input{border-radius:3px;background:#00A2E8;padding:8px 60px;color:#fff;border:none;font-size:17px;}


/*索要发票*/

#tableweb {width:100%;background:#ffffff;margin-top:15px;box-shadow:3px 3px 5px #ddd;word-break:break-all; }
#tableweb tr{padding:10px 1%;width:98%;}
#tableweb tbody{width:100%;}
#tableweb tr.tableonetr{background:#DDEFF7;}
#tableweb td{padding:5px 5px 5px 10px;color:#333;}
#tableweb td a#sel{color:#00A3E8}


#tableweb td input[type='text']{border-radius: 5px;width:100px;height:1em;padding:4px;text-align:left;}
#tableweb td.tdright input[type='text'],#tableweb td.tdright textarea{width:90% !important;border-radius:0;padding:4px 0;border:1px #A9A9A9 solid;margin:5px 0;}
#tableweb td input.date{width:60px;height:1em;padding:4px 0;text-align:left;}
#tableweb td input[name='name']{width:60px;}
#tableweb td input[type='submit'],#tableweb td input[type='button']{border:none;border-radius: 5px;background:#00A3E8;width:60px;height:30px;text-align:center;color:#fff;}





.mtotal{margin:5px 0;line-height:200%;text-align:left;background:#ffffff;padding:10px;}
.mtotal span{padding-right:5px;font-size:1em;color:#000;}
.results div{width:98%;background:#ffffff;padding:10px 0px 10px 2%;margin:0;}
.switch{text-align: center;}

.results input[type='checkbox']{
	width: 20px;
	height: 20px;
	border-radius: 100px;
 	-webkit-transition: all .5s ease;
	-moz-transition: all .5s ease;
	-o-transition: all .5s ease;
	-ms-transition: all .5s ease;
	transition: all .5s ease;
	cursor: pointer;
	background: #333;
 	-webkit-box-shadow:inset 0px 1px 3px rgba(0,0,0,0.5);
	-moz-box-shadow:inset 0px 1px 3px rgba(0,0,0,0.5);
	box-shadow:inset 0px 1px 3px rgba(0,0,0,0.5);
    margin: 0 5px;
    }

.results input[type='checkbox']:checked{background: #F23030;}
.results ul,.resultlist ul{margin:8px 0;padding:2% 1%;display:block;width:100%;background:#ffffff;box-shadow:3px 3px 5px #ddd;float:left;}
.results ul:first-child,.resultlist ul:first-child{margin-top:0 !important;}
.results ul .check{float:left;width:8%;padding-top:40px;text-align:center;}
.results ul li{float:right;width:90%;border-bottom:1px #E4E4E4 solid;line-height:200%;color:#8D8D8D;padding:8px 0px;}
.results ul li span,.resultlist ul li span{text-align: left;padding:0 5px;}
.results ul h3,.resultlist ul h3{border:none;display:inline;color:#00A7F0;font-weight:normal;}
.results ul li .statuscon{color:#D40D0C}
.results ul li input[type='text']{border-radius:5px;border:1px #39BCEE solid;padding:5px 10px;width:6em;}

.btnbottom{ position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 999;
    width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;
	background:#ffffff;
	border-top:1px #E4E4E4 solid;
	padding:10px 0;
	}
.btnbottom button,.btnbottom input,.data-but button,.data-but input{border:none;border-radius: 5px;background:#00A3E8;width:120px;height:36px;text-align:center;color:#fff;}


/*   ListInvoice   */
.resultlist ul li{float:left;width:98%;border-bottom:1px #E4E4E4 solid;line-height:200%;color:#8D8D8D;padding:5px 1%;}
.list-but{display: inline-block;
    padding: 3px 10px;
    border: solid 1px rgb(1, 162, 232);
    border-radius: 3px;
    margin: 5px 0px;
    background-color: #fff;}
.resultlist ul .invono{color:#000;}
.resultlist ul .invostatus{color:#D40D0C; margin:0px 5px;}
.current{border-bottom:2px #00A7F0 solid;color:#00A7F0}

.wxdown{margin:90px auto;}
.wxtop{ position:absolute;left: 0;top: 45px;height:80px;line-height:30px;background:#fff;width:98%;text-align:right;padding-right:2%;padding-top:10px;font-weight:bold;}

/*   提交发票申请   */
.conwx-bt{width:98%;padding-left:2%;}
.getfp{padding:10px auto;}
.getfp td input,.getfp td textarea,.getfp td select{width:92%;border-radius: 5px;padding:4px;}
.data-but {width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;background:#ffffff;float:left;padding:10px 0;
	}
#tableweb .tdleft{width:28%;text-align:left;}
#tableweb .tdleft2{width:40%;text-align:left;}
#tableweb .tdrt2{width:20%;}
/*page*/

.page{width:100%;line-height:30px;text-align:center;color:#0079D2;float:left;margin-top:8px;}
.page a{padding:3px 8px;height:24px;color:#333;border:1px #ddd solid;border-radius:4px;}
.page input{border:1px #ddd solid;border-radius:5px;padding:3px 3px;margin-right:4px;position:relative;top:-2px;background:#ffffff;}

#tableweb tr:nth-child(even){background:#EBF5FA;}