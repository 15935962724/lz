<html>
<head>
<link href="/tea/CssJs/Home.css" rel="stylesheet" type="text/css">
<script src="/tea/tea.js" type="text/javascript"></script>
</head>
<body>
<h1>登录/注册</h1>
<div id="head6"><img height="6" src="about:blank"></div>
  <fieldset id="startloginfieldset">

  <FORM name=foLogin METHOD=POST action="/servlet/Login" onSubmit="return(submitText(this.LoginId,'无效会员ID'));">
    <input type='hidden' name=NextUrl VALUE="/servlet/Node?node=1">
    <input type='hidden' name=Node VALUE="1">
    <input type='hidden' name="LoginType" value="0">
    <table border="0" cellpadding="0" cellspacing="0" id="tablecenter">
      <tr>
        <TD>会员ID:</TD>
        <td><input type="TEXT" class="edit_input"  name=LoginId></td>
      </tr>
      <tr>
        <TD>密码:</TD>
        <td><input type="password" class="edit_input" name="Password"></td>
      </tr>
      <tr>
        <TD>&nbsp;</TD>
        <td><input type=SUBMIT name="Enter" class="edit_button" id="edit_submit" VALUE="进入" onClick="if(this.form.SaveLogin.checked){setCookie('SaveLoginMemberId',this.form.LoginId.value);setCookie('SaveLoginPassword',this.form.Password.value);}else{removeCookie('SaveLoginMemberId');removeCookie('SaveLoginPassword');}">
          <input name="Submit" type="button" class="edit_button" id="regbutton" onClick="window.open('/jsp/user/SignUp.jsp?node=1')" value="注册">
        </td>
      </tr>
      <tr>
        <td colspan="2"><A href="/servlet/RetrieveMemberId?node=1">找回用户ID</A> <A href="/servlet/RetrievePassword?node=1">找回密码</A>
          <input  id="CHECKBOX" type="CHECKBOX" name=SaveLogin value=null>
          保存用户ID与密码 </td>
      </tr>
    </table>
  </FORM>
  <SCRIPT>document.foLogin.LoginId.value=getCookie('SaveLoginMemberId','');document.foLogin.Password.value=getCookie('SaveLoginPassword','');if(document.foLogin.LoginId.value.length!=0)document.foLogin.SaveLogin.checked=true;document.foLogin.LoginId.focus();</SCRIPT>
  </fieldset>
  <script type="">foLogin.LoginId.focus();</script>
  <div id="language">
    <FORM NAME=foSwitchL METHOD=POST ACTION="/servlet/SwitchLanguage">
      <INPUT TYPE="HIDDEN" NAME="NextUrl" VALUE="/jsp/user/StartLogin.jsp?node=1"/>
      <INPUT TYPE="HIDDEN" NAME="Language"/>
    </FORM>
    <INPUT TYPE="BUTTON" VALUE="英文" ID="CBEnglish" CLASS="CB" onClick="javascript:document.foSwitchL.Language.value=0;document.foSwitchL.submit();"/>
    <INPUT TYPE="BUTTON" VALUE="日文" ID="CBJapanese" CLASS="CB" onClick="javascript:document.foSwitchL.Language.value=3;document.foSwitchL.submit();"/>
    <INPUT TYPE="BUTTON" VALUE="朝鲜文" ID="CBKorean" CLASS="CB" onClick="javascript:document.foSwitchL.Language.value=4;document.foSwitchL.submit();"/>
  </div>
<div id="head6"><img height="6" src="about:blank"></div>
<div id="language"><%=new Languages(teasession._nLanguage,request)%></div>
</body>
</html>

